<%= form_with model: @kitten do |form| %>
    <%= form.label :name, "Name: " %>
    <%= form.text_field :name %><br><br>
    <%= form.label :age, "Age: " %>
    <%= form.number_field :age, step: 1 %><br><br>
    <%= form.label :cuteness, "Cuteness: " %>
    <%= form.number_field :cuteness, in: 1..10, step: 1 %><br><br>
    <%= form.label :softness, "Softness: " %>
    <%= form.number_field :softness, in: 1..10, step: 1 %><br><br>
    <%= submit_tag("Submit") %>
<% end %>